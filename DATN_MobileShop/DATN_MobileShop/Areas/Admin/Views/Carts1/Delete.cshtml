@model WebShopMobile_core.Models.Carts

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa đơn hàng</h2>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
      

        <dt>
            Tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer1.fullname)
        </dd>

        

        <dt>
            Ngày tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.create_date)
        </dd>

        <dt>
           Cập nhật
        </dt>

        <dd>
            @Html.DisplayFor(model => model.update_at)
        </dd>

        <dt>
            Trạng thái giao hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.statuss)
        </dd>

        <dt>
           Tổng tiền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.total)
        </dd>

        <dt>
            Trạng thái thanh toán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.payment)         
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index")
        </div>
    }
</div>
