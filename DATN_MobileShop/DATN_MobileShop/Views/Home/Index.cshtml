                </nav>
            </div>
            <div class="col-md-6">

                <div class="header-slider normal-slider">
                    @foreach (var item in Model.list_advertisment)
                    {
                        <div class="header-slider-item">
                            @{
                                string ImgPath = "~/wwwroot/img/" + item.photo;
                            }
                            <img src='@Url.Content(ImgPath)' alt="Slider Image">
                            <a href="/Product/Details/@item.id_product"></a>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-3">
                <div class="header-img">
                    <div class="img-item">
                        @{
                            string ImgPaths = "~/wwwroot/img/" + @Model.av2.photo;
                        }
                        <img src="@Url.Content(ImgPaths)" alt="Slider Image">
                        <a class="img-text" href="/Product/Details/@Model.av2.id_product">
                            
                        </a>
                    </div>
                    <div class="img-item">
                        @{
                            string ImgPathss = "~/wwwroot/img/" + @Model.av3.photo;
                        }
                        <img src="@Url.Content(ImgPathss)" alt="Slider Image">
                        <a class="img-text" href="/Product/Details/@Model.av2.id_product">
                            
                        </a>
